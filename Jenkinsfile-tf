pipeline {
    agent any

    environment {
        // Replace with your actual credential ID
        AWS_CREDENTIALS = 'aws-credentials' 
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout your repository containing Terraform files
                checkout scm
            }
        }

        stage('Terraform Init') {
            steps {
                dir('terraform/dev') {
                    script {
                        // Use AWS credentials for Terraform
                        withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: AWS_CREDENTIALS]]) {
                            sh 'terraform init'
                    }
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('terraform/dev') {
                    script {
                        // Use AWS credentials for Terraform
                        withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: AWS_CREDENTIALS]]) {
                            sh 'terraform plan -out=tfplan'
                    }
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('terraform/dev') {
                    script {
                        // Use AWS credentials for Terraform
                        withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: AWS_CREDENTIALS]]) {
                            sh 'terraform apply -auto-approve tfplan'
                    }
                }
            }
        }

    }

    post {
        success {
            echo 'Terraform operations completed successfully!'
        }
        failure {
            echo 'Terraform operations failed!'
        }
    }
}
